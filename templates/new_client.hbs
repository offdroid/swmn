{{#*inline "page"}}

<h1>New client</h1>

<style>
input[type=text], input[type=password], select {
  width: 100%;
  padding: 8px 12px;
  margin: 8px 0;
  display: inline-block;
  box-sizing: border-box;
}
</style>

<form id="new_client" method="POST">
    <label for="id-field">Common name (id)</label>
    <input type="text" name="id" id="id-field" placeholder="Common name">

    <label for="assoc-field">Associated with</label>
    <input type="text" name="associated_with" id="assoc-field" placeholder="[Optional] Associated with">

    <label for="desc-field">Description</label>
    <input type="text" name="description" id="desc-field" placeholder="[Optional] Description">

    <label for="passphrase-field">Passphrase</label>
    <input type="password" name="passphrase" id="passphrase-field" placeholder="[Optional] (Client)passphrase">

{{#if ca_pass_required}}
    <label for="ca-passphrase-field">CA Passphrase</label>
    <input type="password" name="ca_passphrase" id="ca-passphrase-field" placeholder="CA passphrase">
{{/if}}

    <input type="submit" value="Create" id="create-button">
</form>

{{/inline}}
